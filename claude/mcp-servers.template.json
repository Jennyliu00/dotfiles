{
  "mcpServers": {
    "atlassian-mcp-server": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-atlassian"
      ],
      "env": {
        "ATLASSIAN_CLOUD_ID": "66c05bee-f5ff-4718-b6fc-81351e5ef659",
        "ATLASSIAN_INSTANCE_URL": "https://datadoghq.atlassian.net",
        "ATLASSIAN_OAUTH_CLIENT_ID": "<YOUR_OAUTH_CLIENT_ID>",
        "ATLASSIAN_OAUTH_CLIENT_SECRET": "<YOUR_OAUTH_CLIENT_SECRET>",
        "ATLASSIAN_OAUTH_REDIRECT_URI": "http://localhost:3000/oauth/callback"
      }
    }
  }
}
